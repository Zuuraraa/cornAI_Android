<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="30dp"
    android:background="#F9F8F6">
    
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo_start"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/phoneBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Register With Phone Number"
        android:backgroundTint="#626F47"
        app:cornerRadius="30dp"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/googleBtn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Continue With Google Account"
        android:backgroundTint="#FEFEFE"
        app:strokeColor="#626F47"
        app:strokeWidth="2dp"
        app:cornerRadius="30dp"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:textColor="#18230F"
        app:icon="@drawable/ic_google"
        app:iconSize="22dp"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="@null"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/appleBtn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Continue With Apple Account"
        android:backgroundTint="#FEFEFE"
        app:strokeColor="#626F47"
        app:strokeWidth="2dp"
        app:cornerRadius="30dp"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:textColor="#18230F"
        app:icon="@drawable/ic_apple"
        app:iconSize="23dp"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="@null"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/googleBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/viewDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#C8C8C8"
        android:layout_marginTop="32dp"

        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"

        app:layout_constraintTop_toBottomOf="@id/appleBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/text_login"
        android:textSize="16sp"
        android:textColor="#555555"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/viewDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/footer_terms"
        android:textSize="14sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>