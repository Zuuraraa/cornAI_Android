<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputPhoneActivity"
    android:padding="30dp"
    android:background="#F9F8F6">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="fitCenter"
        android:contentDescription="GoBack"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        app:tint="#626F47"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitlePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#0A400C"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvDescPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill your phone number here"
        android:textSize="18dp"
        android:textStyle="normal"
        android:textColor="#555555"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePhone"
        app:layout_constraintStart_toStartOf="parent"/>
        />
    
    <LinearLayout
        android:id="@+id/containerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvDescPhone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‡®ðŸ‡© +62"
            android:textSize="18dp"
            android:textStyle="normal"
            android:textColor="#555555"
            android:padding="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="25dp"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#626F47"
            android:hint="812 9875 6439"
            android:textSize="18dp"
            android:textStyle="normal"
            android:textColor="#555555"
            android:inputType="phone"
            android:padding="16dp"
            android:layout_marginEnd="25dp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/inputPhoneBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:backgroundTint="#626F47"
        app:cornerRadius="30dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>