<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity"
    android:padding="30dp"
    android:background="#F9F8F6">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="fitCenter"
        android:contentDescription="GoBack"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        app:tint="#626F47"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitleOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#0A400C"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvDescOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have sent the code verification to\nYOUR_NUMBER"
        android:textSize="18dp"
        android:textStyle="normal"
        android:textColor="#555555"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleOTP"
        app:layout_constraintStart_toStartOf="parent"/>
    />

    <LinearLayout
        android:id="@+id/containerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvDescOTP">

        <EditText
            android:id="@+id/OTP1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/bg_otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0A400C"
            android:layout_marginEnd="24dp"/>

        <EditText
            android:id="@+id/OTP2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/bg_otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0A400C"
            android:layout_marginEnd="24dp"/>

        <EditText
            android:id="@+id/OTP3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/bg_otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0A400C"
            android:layout_marginEnd="24dp"/>

        <EditText
            android:id="@+id/OTP4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/bg_otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0A400C"
            android:layout_marginEnd="24dp"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/tvResendTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend code in 00:50"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:textColor="#555555"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/containerPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifyBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Verify Phone Number"
        android:textSize="16dp"
        android:textFontWeight="500"
        android:backgroundTint="#626F47"
        app:cornerRadius="30dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>