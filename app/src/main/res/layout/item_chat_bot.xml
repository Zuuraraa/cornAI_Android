<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/botImg"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/logo_nobg"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/botBubbleCard"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/botBubbleCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F8F5E9"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/botImg">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi! I'm CornAI. How can i help?"
            android:textSize="16sp"
            android:textColor="#000000"
            android:padding="14dp"
            android:maxWidth="280dp"
            android:gravity="start"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>